<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="world.hello.san.sandblibtesting.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginLeft="2dp"
            android:id="@+id/textView"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginStart="2dp" />

        <EditText
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/ed_name"
            android:background="@drawable/editshape"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:inputType="text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_row="0"
            android:text="Age"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/ed_age"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_column="3"
            android:layout_marginLeft="5dp"
            android:layout_row="0"
            android:inputType="text"
            android:background="@drawable/editshape"
            android:layout_marginStart="5dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:text="DOB"
            android:layout_marginStart="2dp" />

        <EditText
            android:id="@+id/ed_dob"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_row="1"
            android:inputType="text"
            android:background="@drawable/editshape"
            android:layout_marginStart="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father Name"
            android:id="@+id/textView4"
            android:layout_marginLeft="10dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />

        <EditText
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/ed_fname"
            android:layout_row="1"
            android:inputType="text"
            android:background="@drawable/editshape"
            android:layout_column="3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/bt_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:onClick="btInsertClick"
            android:layout_row="0"
            android:text="Insert" />

        <Button
            android:id="@+id/bt_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:onClick="btnUpdate"
            android:layout_row="0"
            android:text="Update" />

        <Button
            android:id="@+id/bt_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:onClick="btnDelete"
            android:text="Delete" />

        <Button
            android:id="@+id/bt_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:onClick="btnSearch"
            android:text="Search" />
        <Button
            android:id="@+id/bt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="btnNext"
            android:text="Next" />

        <Button
            android:id="@+id/bt_prv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.07"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="btnPrevious"
            android:text="Previous" />
    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">





    </LinearLayout>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
